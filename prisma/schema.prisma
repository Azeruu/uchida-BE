generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      String   @default("user") // "admin" or "user"
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}

model Question {
  id              String   @id @default(uuid())
  totalQuestions  Int      @map("total_questions")
  durationSeconds Int      @map("duration_seconds")
  maxIncorrectAnswers Int @default(7) @map("max_incorrect_answers")
  minQuestionsPerMinute Int @default(35) @map("min_questions_per_minute")
  createdAt       DateTime @default(now()) @map("created_at")

  @@map("questions")
}

model TestResult {
  id               String   @id @default(uuid())
  participantName  String   @map("participant_name")
  participantEmail String   @map("participant_email")
  participantPendidikan String   @map("participant_pendidikan")
  participantNoHp String   @map("participant_no_hp")
  totalQuestions   Int      @map("total_questions")
  correctAnswers   Int      @map("correct_answers")
  score            Float
  isPassed         Boolean  @default(false) @map("is_passed")
  totalTime        Int      @map("total_time") // in seconds
  answers          Json   // JSON string
  createdAt        DateTime @default(now()) @map("created_at")

  @@index([participantEmail])
  @@map("test_results")
}
